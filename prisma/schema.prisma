generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String
  password  String
  email     String    @unique
  role      Role
  token     String?
  active    Boolean   @default(true) // Trạng thái tài khoản
  avatar    String? // Link đến avatar (nếu cần)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Lecturer  Lecturer?
  Student   Student?

  @@map("users")
}

// Enum cho vai trò
enum Role {
  LECTURER // Giảng viên
  STUDENT // Sinh viên
}

model Lecturer {
  id          Int          @id @default(autoincrement())
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id])
  classes     Class[]
  assignments Assignment[]

  @@map("lecturers")
}

model Student {
  id           Int                    @id @default(autoincrement())
  userId       Int                    @unique
  user         User                   @relation(fields: [userId], references: [id])
  classes      Class[]                @relation("StudentClasses")
  assignments  AssignmentSubmission[]
  attendance   AttendanceStatus[]
  LeaveRequest LeaveRequest[]

  @@map("students")
}

model Class {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  lecturerId    Int
  lecturer      Lecturer        @relation(fields: [lecturerId], references: [id])
  students      Student[]       @relation("StudentClasses")
  schedule      String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  assignments   Assignment[]
  attendance    Attendance[]
  StudyMaterial StudyMaterial[]
  LeaveRequest  LeaveRequest[]

  @@map("classes")
}

model Assignment {
  id          Int                    @id @default(autoincrement())
  title       String
  description String?
  lecturerId  Int
  lecturer    Lecturer               @relation(fields: [lecturerId], references: [id])
  classId     Int
  class       Class                  @relation(fields: [classId], references: [id])
  dueDate     DateTime
  submissions AssignmentSubmission[]
  graded      Boolean                @default(false)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt

  @@map("assignments")
}

model AssignmentSubmission {
  id           Int        @id @default(autoincrement())
  studentId    Int
  student      Student    @relation(fields: [studentId], references: [id])
  assignmentId Int
  assignment   Assignment @relation(fields: [assignmentId], references: [id])
  grade        Float?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("assignment_submissions")
}

model Attendance {
  id      Int                @id @default(autoincrement())
  classId Int
  class   Class              @relation(fields: [classId], references: [id])
  date    DateTime
  records AttendanceStatus[]

  @@map("attendances")
}

model AttendanceStatus {
  id           Int            @id @default(autoincrement())
  studentId    Int
  student      Student        @relation(fields: [studentId], references: [id])
  attendanceId Int
  attendance   Attendance     @relation(fields: [attendanceId], references: [id])
  status       PresenceStatus

  @@map("attendance_status")
}

enum PresenceStatus {
  CO_MAT
  VANG_CO_PHEP
  VANG_KHONG_PHEP
}

model StudyMaterial {
  id          Int          @id @default(autoincrement())
  classId     Int
  class       Class        @relation(fields: [classId], references: [id])
  title       String
  description String?
  link        String
  type        MaterialType

  @@map("study_materials")
}

enum MaterialType {
  BAI_GIANG
  BAI_DOC_THEM
  VIDEO_HUONG_DAN
}

model LeaveRequest {
  id           Int         @id @default(autoincrement())
  studentId    Int
  student      Student     @relation(fields: [studentId], references: [id])
  classId      Int
  class        Class       @relation(fields: [classId], references: [id])
  reason       String
  status       LeaveStatus
  requestTime  DateTime    @default(now())
  responseTime DateTime?

  @@map("leave_requests")
}

enum LeaveStatus {
  DANG_XU_LY
  DA_DUYET
  TU_CHOI
}
